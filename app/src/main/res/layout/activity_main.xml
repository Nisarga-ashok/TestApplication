<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:textColor="@android:color/background_dark"
            android:textSize="40sp"
            android:textStyle="italic"
            tools:text="SAMAYA" />

        <ImageView
            android:id="@+id/Logo_image_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            app:srcCompat="@drawable/samaya" />
    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:context=".MainActivity" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp">

        <TextView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Date"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:inputType="time"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_width="wrap_content" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/Time"
            android:layout_marginStart="14dp"
            android:fontFamily="serif"
            android:text="Current Time"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:layout_width="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/HeartRate"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="16dp"
            android:text=" HeartRate"
            android:textStyle="bold"
            tools:text=" HeartRate" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:contentDescription="Numeric Value"
            android:ems="10"
            android:hint="Numeric Value Displayed"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#38eaea"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/Home_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/priority_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Priority List"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="236dp"
            tools:layout_editor_absoluteY="495dp" />
    </LinearLayout>

</RelativeLayout>